datasource db {
  provider = "postgresql"  // Ya da başka bir DB kullanıyorsan onu yaz
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Skill {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  image       String
}

model Contact {
  id          Int    @id @default(autoincrement())
  name        String
  email       String
  phone       String
  message     String
}
